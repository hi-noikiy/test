<config>
    <modules>
        <Belvg_Countdown>
            <version>1.7.3</version>
        </Belvg_Countdown>
    </modules>
    <frontend>
        <routers>
            <countdown>
                <use>standard</use>
                <args>
                    <module>Belvg_Countdown</module>
                    <frontName>countdown</frontName>
                </args>
            </countdown>
        </routers>
        <layout>
            <updates>
                <countdown>
                    <file>belvg/countdown.xml</file>
                </countdown>
            </updates>
        </layout>
        <translate>
            <modules>
                <Belvg_Countdown>
                    <files>
                        <default>Belvg_Countdown.csv</default>
                    </files>
                </Belvg_Countdown>
            </modules>
        </translate>        
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <belvg_countdown_category_product_change_status>
                        <type>singleton</type>
                        <class>countdown/observer_changestatus</class>
                        <method>changeStatus</method>
                    </belvg_countdown_category_product_change_status>
                </observers>
            </controller_action_layout_load_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <belvg_countdown_block_to_html_after>
                        <type>singleton</type>
                        <class>countdown/observer_category</class>
                        <method>toHtmlAfter</method>
                    </belvg_countdown_block_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <catalog_product_collection_load_after>
                <observers>
                    <belvg_countdown_load_propduct_collection>
                        <type>singleton</type>
                        <class>countdown/observer_category</class>
                        <method>loadCountdownToProductCollection</method>
                    </belvg_countdown_load_propduct_collection>
                </observers>
            </catalog_product_collection_load_after>
        </events>
    </frontend>
    <!--<crontab>
        <jobs>
            <belvg_cron_category_product_change_status>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>countdown/observer_changestatus::changeStatus</model></run>
            </belvg_cron_category_product_change_status>
        </jobs>
    </crontab>-->
    <admin>
        <routers>
            <countdown>
                <use>admin</use>
                <args>
                    <module>Belvg_Countdown</module>
                    <frontName>countdown</frontName>
                </args>
            </countdown>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <countdown>
                    <file>belvg/countdown.xml</file>
                </countdown>
            </updates>
        </layout>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <belvg_product_countdown_injectTabs>
                        <type>singleton</type>
                        <class>countdown/observer_product</class>
                        <method>injectTabs</method>
                    </belvg_product_countdown_injectTabs>
                    <!--<belvg_category_countdown_injectTabs>
                        <type>singleton</type>
                        <class>countdown/observer_category</class>
                        <method>injectTabs</method>
                    </belvg_category_countdown_injectTabs>-->
                    <belvg_update_attributes_countdown_injectTabs>
                        <type>singleton</type>
                        <class>countdown/observer_attributes</class>
                        <method>injectTabs</method>
                    </belvg_update_attributes_countdown_injectTabs>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <catalog_product_save_after>
                <observers>
                    <belvg_save_product_countdown_data>
                        <type>singleton</type>
                        <class>countdown/observer_product</class>
                        <method>saveTabData</method>
                    </belvg_save_product_countdown_data>
                </observers>
            </catalog_product_save_after>
            <!--<catalog_category_save_after>
                <observers>
                    <belvg_save_category_countdown_data>
                        <type>singleton</type>
                        <class>countdown/observer_category</class>
                        <method>saveTabData</method>
                    </belvg_save_category_countdown_data>
                </observers>
            </catalog_category_save_after>
            <controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
                <observers>
                    <belvg_save_category_countdown_data>
                        <type>singleton</type>
                        <class>countdown/observer_attributes</class>
                        <method>saveTabData</method>
                    </belvg_save_category_countdown_data>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>-->
            <catalog_product_import_finish_before>
                <observers>
                    <belvg_countdown_import_finish_before>
                        <class>countdown/observer_product</class>
                        <method>importFinishBefore</method>
                    </belvg_countdown_import_finish_before>
                </observers>
            </catalog_product_import_finish_before>
        </events>
    </adminhtml>   
    <global>
        <resources>
            <countdown_setup>
                <setup>
                    <module>Belvg_Countdown</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </countdown_setup>
            <countdown_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </countdown_write>
            <countdown_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </countdown_read>
        </resources>
        <blocks>
            <countdown><class>Belvg_Countdown_Block</class></countdown>
        </blocks>
        <models>
            <countdown>
                <class>Belvg_Countdown_Model</class>
                <resourceModel>countdown_mysql4</resourceModel>
            </countdown>
            <countdown_mysql4>
                <class>Belvg_Countdown_Model_Mysql4</class>
                <entities>
                    <countdown>
                        <table>belvg_countdown</table>
                    </countdown>
                </entities>
            </countdown_mysql4>
        </models>
        <helpers>
            <countdown>
                <class>Belvg_Countdown_Helper</class>
            </countdown>
        </helpers>
    </global>
    <default>
        <countdown>
            <settings>
                <productscount>4</productscount>
                <categoriescount>2</categoriescount>
            </settings>
        </countdown>
    </default>
    <jquery>
        <compatibility>
            <Belvg_Quickviewpro>
                <v1_7_1/>
                <v1_7_2/>            
                <v1_8_0/>
                <v1_8_1/>
                <v1_8_2/>
                <v1_8_3/>
            </Belvg_Quickviewpro>
        </compatibility>
    </jquery>
</config>
