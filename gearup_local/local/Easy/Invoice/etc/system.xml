<config>                
   <sections>
        <sales_pdf>
            <groups>
                <invoice translate="label">
                    <fields>                              
                        <show_sku translate="label">
                            <label>Show SKU</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Show / hide SKU column</comment>
                        </show_sku>  

                        <show_vat translate="label">
                            <label>Show VAT</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Show / hide VAT items</comment>
                        </show_vat>	
                        
                        <replace_invoice_id translate="label">
                            <label>Show Order ID as Invoice ID</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Show Order ID as Invoice ID in the header</comment>
                        </replace_invoice_id> 
                        
                        <vs_invoice_id translate="label">
                            <label>Invoice ID as variable symbol</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use Invoice ID as variable symbol instead of Order ID</comment>
                        </vs_invoice_id> 
                        
                        <address translate="label">
                            <label>Address</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Max 9 rows. Can be used for displaying of registration info.</comment>
                        </address>                        
                        
                        <ic translate="label">
                            <label>Reg. No.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ic>
                        <taxvat translate="label">
                            <label>VAT ID No.</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Leave empty to hide this item</comment>
                        </taxvat>
                        <bank_account_no translate="label">
                            <label>Bank account number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bank_account_no>
                        <bank_sort_code translate="label">
                            <label>Bank code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bank_sort_code>
                        <bank_iban translate="label">
                            <label>IBAN</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Leave empty to hide this item</comment>
                        </bank_iban>
                        <bank_swift translate="label">
                            <label>SWIFT</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Leave empty to hide this item</comment>
                        </bank_swift>
                        <issuer translate="label">
                            <label>Issued by</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>18</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Name of invoice issuer</comment>
                        </issuer>
                        <duzp translate="label">
                            <label>Tax date (days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>19</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							       <comment>Leave empty to hide this item</comment>
                        </duzp>
                        <due_date translate="label">
                            <label>Due date (days)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							       <comment>Leave empty to hide this item</comment>
                        </due_date>
                         
                        <logo translate="label comment">
                            <label>Logo for PDF print-outs (400x300)</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image_pdf</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sales/store/logo</upload_dir>
                            <base_url type="media" scope_info="1">sales/store/logo</base_url>
                            <sort_order>31</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Default header logo (jpeg, tiff, png)</comment>
                        </logo>
                        
                        <stamp translate="label comment">
                            <label>Stamp for PDF print-outs (400x300)</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image_pdf</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">sales/store/stamp</upload_dir>
                            <base_url type="media" scope_info="1">sales/store/stamp</base_url>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Default footer stamp (jpeg, tiff, png)</comment>
                        </stamp>                                      
                    </fields>
                </invoice>
            </groups>
        </sales_pdf>
    </sections>
</config>