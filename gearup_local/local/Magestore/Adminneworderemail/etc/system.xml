<?xml version="1.0"?>
<config>
    <sections>
        <sales_email>
            <groups>
                <order>
                    <fields>
                        <admin_email_notify translate="label comment">
                            <label>Notify New Order To Email</label>
                            <comment><![CDATA[separate by comma ","]]></comment>
                            <frontend_type>text</frontend_type>                            
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                        </admin_email_notify>
                        <admin_email_notify_status translate="label">
                            <label>Send notification when placed New Order has status:</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>sales/resource_order_status_collection</source_model>
                            <sort_order>105</sort_order>
                            <show_in_default>1</show_in_default>
                        </admin_email_notify_status>
                        <admin_email_template translate="label">
                            <label>Admin Notify Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                        </admin_email_template>
                        <admin_email_cancel_template translate="label">
                            <label>Admin Notify Email Cancel Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                        </admin_email_cancel_template>
                    </fields>
                </order>
            </groups>
        </sales_email>				
    </sections>
</config>