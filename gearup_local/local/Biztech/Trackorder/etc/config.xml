<config>
    <modules>
        <Biztech_Trackorder>
            <version>0.1.5</version>
        </Biztech_Trackorder>
    </modules>
    <frontend>
        <routers>
            <trackorder>
                <use>standard</use>
                <args>
                    <module>Biztech_Trackorder</module>
                    <frontName>track-order</frontName>
                </args>
            </trackorder>
        </routers>
        <layout>
            <updates>
                <trackorder>
                    <file>trackorder.xml</file>
                </trackorder>
            </updates>
        </layout>
    </frontend>
     <admin>
        <routers>
            <adminhtml>
                    <args>
                    <modules>
                        <trackorder after="Mage_Adminhtml">Biztech_Trackorder_Adminhtml</trackorder>
                        </modules>
                    </args>
                </adminhtml>    
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Biztech_Trackorder>
                            <title>Trackorder Module</title>
                            <sort_order>10</sort_order>
                        </Biztech_Trackorder>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <trackorder>
                                            <title>Track Order</title>
                                        </trackorder>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <trackorder>
                    <file>trackorder.xml</file>
                </trackorder>
            </updates>
        </layout>
        <events>
            <admin_system_config_changed_section_trackorder>
                <observers>
                    <trackorder_status>
                        <type>model</type>
                        <class>trackorder/observer</class>
                        <method>checkstatus</method>
                    </trackorder_status>
                </observers>
            </admin_system_config_changed_section_trackorder>
            <sales_order_save_after>
                <observers>
                    <trackorder_link>
                        <type>singleton</type>
                        <class>trackorder/observer</class>
                        <method>addlinkAdmin</method>
                    </trackorder_link>
                </observers>
            </sales_order_save_after>
        </events>
    </adminhtml>   
    <global>
        <helpers>
            <sales>
                <rewrite>
                    <guest>Biztech_Trackorder_Helper_Guest</guest>
                </rewrite>
            </sales>
        </helpers>
        <models>
            <trackorder>
                <class>Biztech_Trackorder_Model</class>
                <resourceModel>trackorder_mysql4</resourceModel>
            </trackorder>
            <trackorder_mysql4>
                <class>Biztech_Trackorder_Model_Mysql4</class>
                <entities>
                    <trackorder>
                        <table>trackorder</table>
                    </trackorder>
                </entities>
            </trackorder_mysql4>
        </models>
        <events>
            <sales_order_save_after>
                <observers>
                    <trackorder_link>
                        <type>singleton</type>
                        <class>trackorder/observer</class>
                        <method>addlinkFront</method>
                    </trackorder_link>
                </observers>
            </sales_order_save_after>
            <checkout_type_multishipping_create_orders_single>
                <observers>
                    <trackorder_multishiplink>
                        <type>singleton</type>
                        <class>trackorder/observer</class>
                        <method>addmultishipLink</method>
                    </trackorder_multishiplink>
                </observers>
            </checkout_type_multishipping_create_orders_single>
            <controller_action_predispatch_trackorder_index_track>
                <observers>
                    <mymodule>
                        <class>trackorder/observer</class>
                        <method>checkOrdertrack</method>
                    </mymodule>
                </observers>
            </controller_action_predispatch_trackorder_index_track>
            <controller_action_predispatch_sales_guest_form>
                <observers>
                    <redirect_guest>
                        <type>singleton</type>
                        <class>trackorder/observer</class>
                        <method>redirectGuestForm</method>
                    </redirect_guest>
                </observers>
            </controller_action_predispatch_sales_guest_form>
        </events>
        <resources>
            <trackorder_setup>
                <setup>
                    <module>Biztech_Trackorder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </trackorder_setup>
            <trackorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </trackorder_write>
            <trackorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </trackorder_read>
        </resources>
        
       
        <blocks>
            <trackorder>
                <class>Biztech_Trackorder_Block</class>
            </trackorder>
        </blocks>
        <helpers>
            <trackorder>
                <class>Biztech_Trackorder_Helper</class>
            </trackorder>
        </helpers>
    </global>
    <default>
        <captcha  translate="label">
            <frontend>
                <areas>
                    <track_order_captcha>
                        <label>Track Order</label>
                    </track_order_captcha>
                </areas>
            </frontend>
        </captcha>
        <customer>
            <captcha>
                <always_for>
                    <track_order_captcha>1</track_order_captcha>
                </always_for>
            </captcha>
        </customer>
    </default>
</config>