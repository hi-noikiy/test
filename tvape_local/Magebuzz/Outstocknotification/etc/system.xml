<?xml version="1.0"?>
<config>
  <tabs>
    <magebuzz translate="label">
      <label>MAGEBUZZ ADD-ONS</label>
      <sort_order>400</sort_order>
    </magebuzz>
  </tabs>
  <sections>
    <outstocknotification translate="label" module="outstocknotification">
      <label>Out of Stock Notification</label>
      <tab>magebuzz</tab>
      <frontend_type>text</frontend_type>
      <sort_order>299</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label">
          <label>General</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <module_enable translate="label comment">
              <label>Enable Module </label>                            
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>                            
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </module_enable> 
            <showbutton translate="label comment">
              <label>Show Notify button in category page</label>                            
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>                            
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </showbutton>
            <displayname translate="label comment">
              <label>Display customer first name and last name in the subscription form</label>                            
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>                            
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </displayname>
            <labelbutton translate="label comment">
              <label>Notify button label</label>                            
              <frontend_type>text</frontend_type>                                          
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </labelbutton>
            <introductionlabel translate="label comment">
              <label>Notification form introduction text</label>                            
              <frontend_type>textarea</frontend_type>                                          
              <col>5</col>
              <rows>5</rows>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </introductionlabel>
            <popup_heading translate="label comment">
              <label>Pop-up heading</label>                            
              <frontend_type>text</frontend_type>                                          
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </popup_heading>
            <success_message translate="label comment">
              <label>Success message</label>                            
              <frontend_type>text</frontend_type>                                          
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </success_message>
            <error_message translate="label comment">
              <label>Error message</label>                            
              <frontend_type>text</frontend_type>                                          
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </error_message>	
						<include_jquery translate="label comment">
              <label>Include jQuery library</label>  
							<comment><![CDATA[Disable this if you already have jquery included in the site]]></comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>                            
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </include_jquery>
          </fields>
        </general>
        <outofstock_email translate="label" module="outstocknotification">
          <label>Email Options</label>
          <frontend_type>text</frontend_type>
          <sort_order>122</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <outofstock_sender_email_identity translate="label">
              <label>Email Sender</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_email_identity</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </outofstock_sender_email_identity>
            <outofstock_template translate="label">
              <label>Notify Email Template</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_email_template</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Select the email template to be sent to users</comment>
            </outofstock_template>
            <delete_outofstock_mail translate="label">
              <label>Delete User's  Mail After Send Mail Notification</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <default>1</default>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Select Yes to delete the user's email from Database once the notification  mail is sent</comment>
            </delete_outofstock_mail>
          </fields>
        </outofstock_email>
      </groups>
    </outstocknotification>
  </sections>
</config>