<config>
	<modules>
		<Magmodules_Core>
			<version>1.0.1</version>
		</Magmodules_Core>
	</modules>		
	<global>
		<blocks>
			<magmodules_core>
				<class>Magmodules_Core_Block_Adminhtml</class>
			</magmodules_core>
		</blocks>			
		<helpers>
			<magmodules_core>
				<class>Magmodules_Core_Helper</class>
			</magmodules_core>
		</helpers>
	</global>
	<adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<magmodules_core>
											<title>Magmodules - Extensions Information</title>
										</magmodules_core>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
    	</acl>
		<layout>
			<updates>
				<magmodulescore>
					<file>magmodules_core.xml</file>
				</magmodulescore>
			</updates>
		</layout>
		<translate>
			<modules>
				<Magmodules_Core>
					<files>
						<default>Magmodules_Core.csv</default>
					</files>
				</Magmodules_Core>
			</modules>
		</translate>
	</adminhtml>
</config>
