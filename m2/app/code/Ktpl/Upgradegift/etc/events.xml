<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_add_product_complete">
        <observer name="ktpl_upgradegift_upgrade" instance="Ktpl\Upgradegift\Observer\Giftupgrade" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="ktpl_upgradegift_removeitem" instance="Ktpl\Upgradegift\Observer\Removeitem" />
    </event>
    <event name="checkout_cart_update_items_after">
        <observer name="ktpl_upgradegift_updateitem" instance="Ktpl\Upgradegift\Observer\Updateitem" />
    </event>
    
</config>