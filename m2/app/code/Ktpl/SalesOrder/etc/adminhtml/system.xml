<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="ktpl_salesorder" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Netsuit Custom field</label>
            <tab>ktpl_general</tab>
            <resource>Ktpl_SalesOrder::ktpl_config</resource>
            <group id="salesorder_general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Upload Taxcode CSV File </label>
                 <field id="texcode_file_upload" translate="label" type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="6" showInDefault="1" showInWebsite="1" >
                    <label>Upload custom file</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">import</upload_dir>
               </field>
            </group>
        </section>
        <section id="ktpl_business_development" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Business Development Manager ( BDM )</label>
            <tab>ktpl_general</tab>
            <resource>Ktpl_SalesOrder::ktpl_config</resource>
            <group id="bd_general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Upload CSV File </label>
                 <field id="bd_file_upload" translate="label" type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="6" showInDefault="1" showInWebsite="1" >
                    <label>Upload file</label>
                    <backend_model>Magento\Config\Model\Config\Backend\File</backend_model>
                    <upload_dir config="system" scope_info="1">import</upload_dir>
               </field>
            </group>
        </section>
    </system>
</config>
