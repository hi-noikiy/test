<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--
    ReCaptcha form config
    -->	
    <virtualType name="Faonni\ReCaptcha\Model\Form\FormConfig" type="Faonni\ReCaptcha\Model\Form\AbstractFormConfig">
        <arguments>
            <argument name="config" xsi:type="array">               
                <item name="catalog_product_view" xsi:type="array">
                    <item name="label" xsi:type="string">Reviews products</item>
                    <item name="handle" xsi:type="string">recaptcha_form_additional_info</item>
                    <item name="post" xsi:type="string">review_product_post</item>
                </item>			
            </argument>
        </arguments>
    </virtualType>	
 	
</config> 
