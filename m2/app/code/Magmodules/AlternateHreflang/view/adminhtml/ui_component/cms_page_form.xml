<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="magmodules_alternate">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Alternate Language Settings</item>
                <item name="sortOrder" xsi:type="number">100</item>
            </item>
        </argument>
        <field name="alternate_category">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magmodules\AlternateHreflang\Model\Cms\Categories</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Alternate Language Category</item>
                    <item name="component" xsi:type="string">Magmodules_AlternateHreflang/js/form/element/options</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="dataScope" xsi:type="string">alternate_category</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                </item>
            </argument>
        </field>
        <field name="alternate_category_new">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">New Category</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="dataScope" xsi:type="string">alternate_category_new</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>